{
  "name": "@token-kit/onchain",
  "license": "GPL-3.0-only",
  "description": "token-kit onchain tools",
  "type": "module",
  "main": "dist/index.cjs",
  "module": "dist/index.js",
  "types": "dist/index.d.ts",
  "version": "0.0.3",
  "files": [
    "dist/**/*"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/TokenScript-Framework/token-kit.git",
    "directory": "packages/onchain"
  },
  "scripts": {
    "build": "tsup",
    "lint": "eslint",
    "test": "c8 ava"
  },
  "devDependencies": {
    "ava": "^6.1.3",
    "c8": "^10.1.2",
    "tsx": "^4.15.7"
  },
  "dependencies": {
    "viem": "2.x"
  },
  "ava": {
    "extensions": [
      "js",
      "ts"
    ],
    "nodeArguments": [
      "--import=tsx"
    ],
    "timeout": "5m"
  },
  "c8": {
    "exclude": [
      "test"
    ],
    "reporter": [
      "text",
      "cobertura",
      "html",
      "json-summary"
    ]
  }
}
