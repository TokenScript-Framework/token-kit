{
  "name": "@token-kit/onchain",
  "description": "token-kit onchain tools",
  "type": "module",
  "main": "dist/index.cjs",
  "module": "dist/index.js",
  "types": "dist/index.d.ts",
  "version": "0.0.1",
  "files": [
    "dist/**/*"
  ],
  "scripts": {
    "build": "tsup",
    "lint": "eslint",
    "test": "c8 ava"
  },
  "devDependencies": {
    "@eslint/js": "^9.10.0",
    "@types/eslint__js": "^8.42.3",
    "ava": "^6.1.3",
    "c8": "^10.1.2",
    "eslint": "^9.10.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-prettier": "^5.2.1",
    "prettier": "^3.3.3",
    "tsup": "^8.1.0",
    "tsx": "^4.15.7",
    "typescript": "^5.5.4",
    "typescript-eslint": "^8.4.0"
  },
  "dependencies": {
    "viem": "2.x"
  },
  "ava": {
    "extensions": [
      "js",
      "ts"
    ],
    "nodeArguments": [
      "--import=tsx"
    ],
    "timeout": "5m"
  },
  "c8": {
    "exclude": [
      "test"
    ],
    "reporter": [
      "text",
      "cobertura",
      "html",
      "json-summary"
    ]
  }
}
